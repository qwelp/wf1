include ../common/_mixin

.footer__wrap
	.footer__col
		.footer__info Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool.
	.footer__col
		+list('footer-menu', menuFooter, `${dir}`)
		ul.c-socials.c-socials-footer
			- var icons = ['vk', 'github', 'in']
			each icon in icons
				li.c-socials__item
					a.c-socials__link(href="#")
						svg.c-socials__icon
							use(xlink:href=`assets/img/sprite.svg#${icon}`)
	.footer__col
		blockquote.footer__blockquote
			p.footer__lesson Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает, где вы живете.
			cite.footer__author — Martin Golding
